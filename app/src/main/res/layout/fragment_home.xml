<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/search_billiards"/>
        <include layout="@layout/popular_billiards"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Điểm đến gần bạn"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
        <include layout="@layout/diemdengannhat"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Gợi ý cho bạn"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
       />
        <include layout="@layout/activity_goi_ycho_ban"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorBlack"
            />
        <include layout="@layout/footer"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>