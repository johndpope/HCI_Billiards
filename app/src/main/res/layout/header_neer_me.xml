<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_t_c"
            android:layout_gravity="center"
            android:id="@+id/btnHeaderNear"
            android:onClick="clickToViewListByHeaderNear"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uy tín"
            android:id="@id/btnHeaderNear"
            android:onClick="clickToViewListBtnHeader"
            android:layout_gravity="center"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View đẹp"
            android:id="@id/btnHeaderNear"
            android:onClick="clickToViewListBtnHeader"
            android:layout_gravity="center"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sang trọng"
            android:id="@id/btnHeaderNear"
            android:onClick="clickToViewListBtnHeader"
            android:layout_gravity="center"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm giá"
            android:layout_gravity="center"
            android:id="@id/btnHeaderNear"
            android:onClick="clickToViewListBtnHeader"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Khu lien hợp"
            android:layout_gravity="center"
            android:id="@id/btnHeaderNear"
            android:onClick="clickToViewListBtnHeader"
            android:textSize="10dp"/>
    </LinearLayout>
</HorizontalScrollView>