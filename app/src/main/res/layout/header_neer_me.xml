<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_t_c"
            android:layout_gravity="center"
            android:id="@+id/btnChangAll"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGanBan"
            android:text="Gần Bạn"

            android:onClick="clickToViewListBtnHeader"
            android:layout_gravity="center"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sang trọng"
            android:layout_gravity="center"
            android:id="@+id/btnSangTrong"
            android:textSize="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uư Đãi HOT"
            android:id="@+id/btnUuDaiHot"
            android:layout_gravity="center"
            android:textSize="10dp"/>
</LinearLayout>